@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4">
            <div class="left-links">
                <NavLink href="/" class="nav-link" target="_self">Home</NavLink>
                <NavLink href="/add-container" class="nav-link" target="_self">Add Container</NavLink>
                <NavLink href="/history" class="nav-link" target="_self">History</NavLink>
            </div>
            <div class="right-link">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .left-links {
        display: flex;
        gap: 1rem;
    }
    .right-link {
        margin-left: auto;
    }
    .nav-link {
        text-decoration: none;
        color: inherit;
    }
    .nav-link.active {
        font-weight: bold;
    }
</style>
